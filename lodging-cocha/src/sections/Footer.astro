---
import Section from "@components/Section.astro";

import Brand from "@assets/footer-brand.svg";

const footerItems = [
  { name: "Contactos", href: "contact" },
  { name: "Redes Sociales", href: "social" },
  { name: "Habitaciones", href: "rooms" },
];
---

<Section
  class="font-poppins grid grid-cols-1 place-content-between place-items-center gap-8 py-16 md:grid-cols-3"
>
  <section>
    <Brand class="" />
  </section>
  <section>
    <h3 class="mb-2 text-xl font-bold">Reservas</h3>
    <ul>
      {
        footerItems.map(({ href, name }) => (
          <li class="py-0.5">
            <a class="text-base font-normal" href={href}>
              {name}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  <section class="flex flex-col items-start">
    <h3 class="mb-2 text-xl font-bold">Join Our Newsletter</h3>
    <div class="flex items-center">
      <label>
        <input
          type="email"
          class="w-full rounded-l border-0 bg-[#EEEEFF] p-2"
          placeholder="Your email address"
        />
      </label>
      <button
        class="rounded-r bg-[#DF6951] px-4 py-2 font-medium text-white transition-opacity duration-200 hover:opacity-90"
      >
        Subscribe
      </button>
    </div>
    <p class="mt-4 text-pretty">
      * Will send you weekly updates for your better tour packages.
    </p>
  </section>
</Section>
