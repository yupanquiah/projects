---
import { Image } from "astro:assets";

import Avatar from "@assets/icons/avatar.svg";
import Bed from "@assets/icons/bed.svg";
import Calender from "@assets/icons/calender.svg";
import type { ImageMetadata } from "astro";

interface Props {
  src: ImageMetadata;
  alt: string;
  title: string;
  currency: string;
  price: number;
  days: number;
  beds: number;
  typeOfBed: string;
}

const { src, alt, title, currency, price, days, beds, typeOfBed } = Astro.props;
---

<section>
  <header class="rounded-2xl bg-[#D86750]">
    <Image src={src} alt={alt} />

    <h3 class="font-poppins py-2 text-center text-xl font-semibold text-white">
      Reservar ahora
    </h3>
  </header>
  <main
    class="font-poppins flex justify-between py-2 text-base text-[#7D7D7D] [&>span]:flex [&>span]:items-center [&>span]:gap-2"
  >
    <span>
      <Calender />
      {days} DÃ­as
    </span>
    <span>
      <Avatar />
      {beds} Camas
    </span>
    <span>
      <Bed />
      {typeOfBed}
    </span>
  </main>
  <footer class="flex justify-between">
    <h4 class="font-poppins text-2xl font-bold">{title}</h4>
    <div>
      <strong>{currency}</strong>
      <span> {price}</span>
    </div>
  </footer>
</section>
