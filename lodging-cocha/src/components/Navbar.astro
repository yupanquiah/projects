---
const navItems = [
  { name: "Inicio", href: "/" },
  { name: "Sobre Nosotros", href: "#about" },
  { name: "Contactanos", href: "#contact" },
  { name: "Blog", href: "#blog" },
];
---

<nav>
  <ul class="flex">
    {
      navItems.map(({ href, name }) => (
        <li>
          <a
            class="text-white font-medium text-lg py-1.5 px-3 rounded hover:bg-[#DF6951] transition-colors duration-200 align-middle"
            href={href}
          >
            {name}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
