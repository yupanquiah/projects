---
import AbletonTitle from "@assets/ableton-title.svg";
---

<header>
  <AbletonTitle />
</header>

<style>
  header {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
    background-image: url("src/assets/imgs/header.jpg");
    min-height: calc(100vh - 120px);

    margin-bottom: 8rem;
    margin-left: 8rem;
    margin-right: 8rem;
    position: relative;

    svg {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 430px;
      height: 104px;
      margin-left: -215px;
      margin-top: -52px;
    }
  }
</style>
